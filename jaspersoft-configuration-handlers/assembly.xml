<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>installer</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${basedir}/target/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${basedir}/libs</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>**/junit*.jar</exclude>
                <exclude>**/mockito-core*.jar</exclude>
                <exclude>**/spring-test*.jar</exclude>
                <exclude>**/allure-*.jar</exclude>
                <exclude>**/hamcrest-core*.jar</exclude>
                <exclude>**/objenesis*.jar</exclude>
                <exclude>**/tika-core*.jar</exclude>
                <exclude>**/joor-java*.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>